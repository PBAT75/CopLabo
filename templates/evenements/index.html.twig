{% extends 'layout.html.twig' %}

{% block title %}Evenements index{% endblock %}

{% block body %}
    <h1 class="t2">Liste des évenements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de l'évenement</th>
                <th>Date</th>
                <th>Heure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.name }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.hour ? evenement.hour|date('h:m') : '' }}</td>

                <td>
                    <a href="{{ path('evenements_show', {'id': evenement.id}) }}">voir</a>
                    <a href="{{ path('evenements_edit', {'id': evenement.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'évenement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('evenements_new') }}">Créer un nouvel évenement</a>
{% endblock %}

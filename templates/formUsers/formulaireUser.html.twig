        {{ form_widget(form.contacts) }}
    {% endif %}
    </div><div class="mt-3">
    {% if formulaire.source %}
        {{ form_label(form.source) }}
    </div><div>
        {{ form_widget(form.source) }}
    {% endif %}
    </div><div class="mt-3">
    {% if formulaire.comment %}
        {{ form_label(form.comment) }}
    </div><div>
        {{ form_widget(form.comment) }}
    {% endif %}
    </div><div class="mt-3">
    {% if formulaire.option1 is not empty %}

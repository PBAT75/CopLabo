    {% if formulaire.option3 is not empty %}
        {{ formulaire.option3}}
        {{ form_widget(form.option3) }}
    {% endif %}
    {% if formulaire.option4 is not empty %}
        {{ formulaire.option4}}
        {{ form_widget(form.option4) }}
    {% endif %}
    {% if formulaire.option5 is not empty %}
        {{ formulaire.option5}}
        {{ form_widget(form.option5) }}
    {% endif %}
    {% if formulaire.option6 is not empty %}
        {{ formulaire.option6}}
        {{ form_widget(form.option6) }}
    {% endif %}
    {% if formulaire.option7 is not empty %}
        {{ formulaire.option7}}
        {{ form_widget(form.option7) }}
    {% endif %}
    {% if formulaire.option8 is not empty %}
        {{ formulaire.option8}}
        {{ form_widget(form.option8) }}
    {% endif %}
    {% if formulaire.option9 is not empty %}
        {{ formulaire.option9}}
        {{ form_widget(form.option9) }}
    {% endif %}

    {{ form_row(form._token) }}



    <button class="btn btn-success mt-5">{{ button_label|default('Valider le formulaire') }}</button>

    {{ form_end(form,{'render_rest':false}) }}

{% endblock %}

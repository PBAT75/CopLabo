{% block head %}
{% endblock %}
{% block body %}
    <h1 class="t2">Questionnaire de retour sur le {{ formulaire.evenements.name }}</h1>
<div class=" col-8 text-center mt-4">

{{ form_start(form) }}
    <div  class="mt-1">
    {% if formulaire.satisfaction %}
        {{ form_label(form.satisfaction) }}
    </div><div>
        {{ form_widget(form.satisfaction) }}
    {% endif %}
        </div><div class="mt-3">
    {% if formulaire.upgrade %}
        {{ form_label(form.upgrade) }}
    </div><div>
        {{ form_widget(form.upgrade) }}
    {% endif %}
                </div><div class="mt-3">
    {% if formulaire.growth %}

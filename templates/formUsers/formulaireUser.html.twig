{% extends 'layout.html.twig' %}

{% block title %}Questionnaire{% endblock %}

{% block body %}
    {#<h1 class="t2">Questionnaire de retour sur le {{ formulaire.evenements.name }}</h1>#}
    {{ form_start(form) }}
    {% if formulaire.satisfaction %}
        {{ form_row(form.satisfaction) }}
    {% endif %}

    {% if formulaire.upgrade %}
        {{ form_row(form.upgrade) }}
    {% endif %}

    {% if formulaire.growth %}
        {{ form_row(form.growth) }}
    {% endif %}

    {% if formulaire.contacts %}
        {{ form_row(form.contacts) }}
    {% endif %}

    {% if formulaire.source %}
        {{ form_row(form.source) }}
    {% endif %}

    {% if formulaire.comment %}
        {{ form_row(form.comment) }}
    {% endif %}

    {% if formulaire.option1 is not empty %}
        {{ formulaire.option1}}
        {{ form_widget(form.option1) }}
    {% endif %}
    {% if formulaire.option2 is not empty %}
        {{ formulaire.option2}}
        {{ form_widget(form.option2) }}

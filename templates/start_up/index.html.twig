
{% extends 'layout.html.twig' %}

{% block title %}Liste des startups{% endblock %}

{% block titre %}Les <br/>Startups{% endblock %}

{% block body %}

<div class="container">
    <div class="row mt-5 mb-5">
        <a class="btn btn-danger" href="{{ path('start_up_new') }}"><i class="fas fa-user-plus"></i> Ajouter une startup</a>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for start_up in start_ups %}
                    <tr>
                        <td><a href="{{ path('start_up_show', {'id': start_up.id}) }}">{{ start_up.name }}</a></td>
                        <td>
                            <a href="{{ path('start_up_show', {'id': start_up.id}) }}"><i class="far fa-eye mr-2"></i></a>
                            <a href="{{ path('start_up_edit', {'id': start_up.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                            <a href="{{ path('start_up_relation_new', {'id': start_up.id}) }}"><i class="far fa-comments"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucune startup trouv√©e</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
</div>


{% endblock %}
